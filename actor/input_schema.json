{
    "title": "Competitor Ad Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "competitorName": {
            "title": "Competitor Name",
            "type": "string",
            "description": "The brand name to search for (e.g., 'Shopify')",
            "editor": "textfield",
            "prefill": "Shopify"
        },
        "country": {
            "title": "Country Code",
            "type": "string",
            "description": "Two-letter country code (e.g., 'US', 'GB', 'ALL')",
            "editor": "textfield",
            "prefill": "US"
        },
        "maxAds": {
            "title": "Max Ads",
            "type": "integer",
            "description": "Maximum number of ads to scrape",
            "default": 20
        }
    },
    "required": [
        "competitorName",
        "country"
    ]
}